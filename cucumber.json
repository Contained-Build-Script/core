{
  "default": {
    "paths": [ "tests/resources/features/**/*.feature" ],
    "require": [ "tests/**/*.ts" ],
    "requireModule": [ "ts-node/register" ],
    "format": [
      "usage",
      "html:pages/test-results/index.html"
    ],
    "parallel": 4,
    "backtrace": true,
    "publishQuiet": true,
    "formatOptions": {
      "colorsEnabled": true,
      "snippetInterface": "synchronous"
    }
  }
}