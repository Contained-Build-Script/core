{
  "default": {
    "paths": [ "tests/resources/features/**/*.feature" ],
    "require": [ "tests/**/*.ts" ],
    "requireModule": [ "ts-node/register" ],
    "format": [
      "progress-bar",
      "html:cucumber-report.html"
    ],
    "parallel": 4,
    "backtrace": true,
    "publishQuiet": true,
    "formatOptions": {
      "colorsEnabled": true,
      "snippetInterface": "synchronous"
    }
  }
}